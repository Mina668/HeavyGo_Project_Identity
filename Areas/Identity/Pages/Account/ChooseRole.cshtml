@page
@model HeavyGo_Project_Identity.Areas.Identity.Pages.Account.ChooseRoleModel
@{
    ViewData["Title"] = "Choose Role";
}

<h2>Register as:</h2>

<form method="post">
    <div>
        <input type="radio" asp-for="Role" value="Client" checked /> Client
    </div>
    <div>
        <input type="radio" asp-for="Role" value="Driver" /> Driver
    </div>
    <button type="submit">Continue</button>
</form>
